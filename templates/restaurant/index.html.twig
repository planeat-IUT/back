{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
    <h1>Restaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Adresse</th>
                <th>Complement</th>
                <th>Code_postal</th>
                <th>Siret</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Mail</th>
                <th>Telephone</th>
                <th>Rib</th>
                <th>Logo</th>
                <th>Nb_table</th>
                <th>A_decouvrir</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nom }}</td>
                <td>{{ restaurant.description }}</td>
                <td>{{ restaurant.adresse }}</td>
                <td>{{ restaurant.complement }}</td>
                <td>{{ restaurant.codePostal }}</td>
                <td>{{ restaurant.siret }}</td>
                <td>{{ restaurant.longitude }}</td>
                <td>{{ restaurant.latitude }}</td>
                <td>{{ restaurant.mail }}</td>
                <td>{{ restaurant.telephone }}</td>
                <td>{{ restaurant.rib }}</td>
                <td>{{ restaurant.logo }}</td>
                <td>{{ restaurant.nbTable }}</td>
                <td>{{ restaurant.aDecouvrir ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_restaurant_new') }}">Create new</a>
{% endblock %}
